package views

import "chatroom/app"
import "fmt"

templ KeyCloakUsers(users []app.KeyCloakUser) {
    <ul id="users_list">
        for _, user := range users {
            <li id={ fmt.Sprintf("user_%v", user.ID) } class="bg-base-100 rounded p-2 my-2">
                { app.Titleize(user.FirstName) }
            </li>
        }
    </ul>
}

func Email(email *string) string {
	if email != nil {
		return *email
	}
	return ""
}
